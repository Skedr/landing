---
import Layout from "../layouts/Layout.astro";
import SimpleHeader from "../components/headers/SimpleHeader.astro";

const meta = {
  title: "Discover our gallery",
  description:
    "Explore our stunning gallery showcasing a diverse collection of photography. Discover captivating visuals that inspire creativity and celebrate the beauty of life.",
};

const extraDescription =
  meta.description +
  '<br/> Follow @Skedr.io on <a href="//www.instagram.com/skedr.io" target="_blank" class="underline">Instagram</a> and <a href="https://www.flickr.com/photos/skedr" target="_blank" class="underline">Flickr</a> to get your photos featured.';
---

<Layout meta={meta}>
  <SimpleHeader title={meta.title} description={extraDescription} />

  <div class="relative isolate bg-gray-900 pb-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div
        class="mx-auto mt-16 max-w-2xl text-sm leading-6 text-gray-900 sm:mt-20 xl:mx-0 xl:max-w-none"
      >
        <script
          is:inline
          type="text/javascript"
          src="//www.juicer.io/embed/skedr-io/embed-code.js"
          async
          defer></script>
      </div>
    </div>
  </div>
</Layout>
