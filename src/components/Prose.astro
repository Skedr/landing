---
import CheckCircleIcon from "astro-heroicons/solid/CheckCircle.astro";
import InformationCircleIcon from "astro-heroicons/solid/InformationCircle.astro";

interface Props {
  title: string;
  description: string;
}
const { title, description } = Astro.props;
---

<div class="relative py-12 lg:py-20 px-4 sm:px-6 lg:px-8">
  <div class="text-center">
    <p
      class="text-lg leading-6 font-semibold text-gray-300 uppercase tracking-wider"
    >
      Blog
    </p>
    <h1 class="mt-2 text-3xl font-extrabold text-white sm:text-4xl lg:text-5xl">
      {title}
    </h1>
    <p class="mt-3 max-w-4xl mx-auto text-xl text-gray-300 sm:mt-5 sm:text-2xl">
      {description}
    </p>
  </div>
</div>
<div class="bg-white px-6 py-32 lg:px-8">
  <div
    class="mx-auto max-w-3xl text-base leading-7 text-gray-700
    prose prose-img:object-cover prose-img:rounded-xl prose-img:bg-gray-50
      prose-figure:mt-16
      prose-figcaption:mt-4 prose-figcaption:flex prose-figcaption:gap-x-2 prose-figcaption:text-sm
      prose-figcaption:leading-6 prose-figcaption:text-gray-500
      prose-p:mt-6 prose-p:max-w-2xl
      prose-h1:mt-2 prose-h1:text-3xl prose-h1:font-bold prose-h1:tracking-tight prose-h1:text-gray-900 prose-h1:sm:text-4xl
      prose-h2:text-2xl prose-h2:font-bold prose-h2:tracking-tight prose-h2:text-gray-900
      prose-ul:mt-8 prose-ul:max-w-xl prose-ul:space-y-8 prose-ul:text-gray-600"
  >
    <slot />
  </div>
</div>
